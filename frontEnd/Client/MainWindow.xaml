<Window x:Class="form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:form"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1076" 
        Width="1920" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="False">






  <Border Background="#272537">

    <Grid Width="1920" Height="1080">

      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="132">
        </ColumnDefinition>
        <ColumnDefinition Width="68"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="30"/>
      </Grid.RowDefinitions>
      <Label Content="URL" Grid.ColumnSpan="2"/>
      <TextBox x:Name="url" TextWrapping="Wrap" Grid.ColumnSpan="2" Margin="40,0,-224,0" Text="text"/>
      <Button Content="GO" Margin="303,0,-312,0" Width="77" Grid.Column="1" Click="Button_Click" />
      <WebBrowser x:Name="brow" Margin="0,60,-1720,-1050" Grid.ColumnSpan="2"/>



    </Grid>




  </Border>

</Window>
