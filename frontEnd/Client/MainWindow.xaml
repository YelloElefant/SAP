<Window x:Class="form.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:form"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1076" 
        Width="1920" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized"
        Background="Transparent"
        AllowsTransparency="False">






  <Border Background="#272537">

    <Canvas Width="1920" Height="1080">




      <Label Content="URL" Grid.ColumnSpan="2"/>
      <TextBox x:Name="url" TextWrapping="Wrap" Text="text" Canvas.Left="36" Canvas.Top="4" HorizontalAlignment="Left" VerticalAlignment="Center" Width="332"/>
      <Button Content="GO" Width="76"  Click="Button_Click" Canvas.Left="373" Canvas.Top="4" HorizontalAlignment="Left" VerticalAlignment="Center" />


      <WebBrowser x:Name="brow" Source="https://google.com" Canvas.Top="45" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1920" Height="1018"/>



    </Canvas>




  </Border>

</Window>